---
import { Image } from "astro:assets";

interface Props {
  small: boolean;
  link: string;
  title: string;
  description: string;
  picture: string;
}

const { small, title, link, picture, description } = Astro.props;
---

<a href={link} class:list={["container", { small: small }]}>
  {
    small ? (
      <img
        class="picture"
        src={`/assets/project-icons/${picture}`}
        alt="hello"
      />
    ) : (
      <div class="grid">
        <img
          class="picture"
          src={`/assets/project-icons/${picture}`}
          alt="hello"
        />
        <h3 class="title">{title}</h3>
        <p class="description">{description}</p>
      </div>
    )
  }
</a>

<style lang="scss">
  .container {
    color: #c8c8c8;
    @media (max-width: 1200px) {
      height: 100px;
      margin: 20px 0 20px 0;
      box-sizing: border-box;
    }

    display: flex;
    width: 100%;
    height: 200px;
    margin-top: 50px;
    transition: 0.3s ease-in-out;
    padding: 10px;
    border-radius: 11px;

    @media (min-width: 1200px) {
      &:hover {
        transform: scale(1.1);
        background-color: white;

        & > .grid {
          & > .title,
          & > .description {
            filter: invert(1);
          }
        }
      }
    }
  }

  .small {
    width: fit-content;
  }

  .grid {
    display: grid;
    grid-template-rows: 0.5fr 1fr;
    grid-template-columns: 200px 3fr;
    width: 100%;

    @media (max-width: 1200px) {
      grid-template-columns: 100px 3fr;
    }
  }

  .picture {
    transition: 0.3s ease-in-out;
    height: 100%;
    aspect-ratio: 1;
    border-radius: 10px;
    grid-area: 1 / 1 / 3 / 2;
  }

  .title {
    font-size: 30px;
    text-align: left;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    padding: 10px;
    margin: 0;
    grid-area: 1 / 2 / 2 / 3;

    @media (max-width: 1200px) {
      font-size: 15px;
    }
  }

  .description {
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    flex: 1;
    margin: 0;
    padding: 10px;
    grid-area: 2 / 2 / 3 / 3;
    -webkit-line-clamp: 4;
    line-clamp: 4;

    @media (max-width: 1200px) {
      font-size: 12px;
    }
  }
</style>
