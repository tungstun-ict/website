---
interface Props {
  title: string;
  link: string;
}

const {title, link} = Astro.props;
---
<a target="_blank" href={link} class="download_button">
  {title}
</a>

<style lang="scss">
  .download_button {
    margin: 20px 10px 0 0;
    display: inline-block;
    width: 200px;
    height: fit-content;
    border: none;
    padding: 20px;
    background-color: #212121;
    color: #ffffff;
    text-align: center;
    border-radius: 10px;
    cursor: pointer;
    box-sizing: border-box;

    @media (max-width: 1200px) {
      width: 100%;
      margin: 20px 0 0 0;

    }
  }
</style>