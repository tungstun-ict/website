---
import { Image } from "astro:assets";
import Stamp from "./stamp.svg";

interface Props {
  degreeType: string;
  institution: string;
  degree: string;
  tagline: string;
  year: string;
}

const { degreeType, institution, degree, tagline, year } = Astro.props;
---

<div class="certificate">
  <h4 class="type">{degreeType}</h4>
  <hr class="divider"/>
  <p class="undertitle">of achievement</p>

  <h3 class="degree">{degree}</h3>
  <p class="tagline">{tagline}</p>

  <div class="bottom">
    <p class="institution">{institution}</p>
    <p class="year">{year}</p>
  </div>
  <Image class="stamp" src={Stamp} alt=""/>
</div>

<style lang="scss">
  .certificate {

    @media (max-width: 1200px) {
      min-width: 80%;
      max-width: 80%;
      min-height: 50%;
      max-height: 50%;
    }

    min-width: 500px;
    min-height: 300px;
    max-width: 500px;
    max-height: 300px;
    color: black;
    display: flex;
    flex-direction: column;
    align-items: center;
    background-color: #fff3d1;
    position: relative;
  }

  .type {
    font-size: 30px;
    font-weight: bold;
    margin: 20px 0 0 0;

    @media (max-width: 1200px) {
      font-size: 15px;
    }

  }

  .divider {
    border: 1px black solid;
    width: 200px;
    margin: 5px;

    @media (max-width: 1200px) {
      width: 100px;
    }
  }

  .undertitle {
    margin: 0;

    @media (max-width: 1200px) {
      font-size: 8px;
    }
  }

  .degree {
    font-size: 40px;
    margin: 20px 0 0 0;

    @media (max-width: 1200px) {
      font-size: 15px;
    }
  }

  .tagline {
    margin: 0;
  }

  .bottom {
    margin-top: auto;
    display: flex;
    width: 100%;
    justify-content: space-between;
    box-sizing: border-box;
    padding:  0 20px;

    @media (max-width: 1200px) {
      font-size: 8px;
    }
  }

  .stamp {
    position: absolute;
    width: 100px;
    height: 100px;
    bottom: -40px;

    @media (max-width: 1200px) {
      width: 50px;
      height: 50px;
      bottom: -25px;
    }
  }
</style>
